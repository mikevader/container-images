{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    "local>mikevader/renovate-config"
  ],
  packageRules: [
    {
      description: 'Auto-merge rails-demo gems',
      matchDatasources: [
        'rubygems',
        'npm',
      ],
      automerge: true,
      automergeType: 'pr',
      ignoreTests: true,
      matchFileNames: [
        'apps/rails-demo/**',
      ],
    },
    {
      description: 'Auto-merge Ubuntu base updates',
      matchDatasources: [
        'docker',
      ],
      automerge: true,
      automergeType: 'pr',
      ignoreTests: true,
      matchPackageNames: [
        'ghcr.io/mikevader/ubuntu-focal',
        'ghcr.io/mikevader/ubuntu-jammy',
        'ghcr.io/mikevader/ubuntu-noble',
      ],
    },
  ],
}
